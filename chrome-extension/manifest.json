{
  "manifest_version": 3,
  "name": "arXiv Tab Tracker & OneNote Notes",
  "version": "1.0",
  "description": "Tracks open arXiv papers and connects to OneNote for notes.",
  "permissions": [
    "tabs",
    "storage"
  ],
  "host_permissions": [
    "https://arxiv.org/*"
  ],
  "background": {
    "service_worker": "background.js"
  },
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "icon16.png",
      "48": "icon48.png",
      "128": "icon128.png"
    }
  },
  "icons": {
    "16": "icon16.png",
    "48": "icon48.png",
    "128": "icon128.png"
  }
}
